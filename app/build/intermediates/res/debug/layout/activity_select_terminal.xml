<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<include layout="@layout/title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <RadioGroup
        android:id="@+id/rg_select_terminal_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_shuakatou"
            android:checked="true"
            android:text="艾创刷卡器（音频）"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RadioButton
            android:visibility="gone"
            android:id="@+id/rb_dianfubao"
            android:text="艾创点付宝"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RadioButton
            android:visibility="gone"
            android:id="@+id/rb_huixing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="汇兴刷卡头" />
        <RadioButton
            android:id="@+id/rb_mofang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="魔方刷卡器（音频）" />

        <RadioButton
            android:id="@+id/rb_mofangblue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="魔方刷卡器（蓝牙）" />

        <RadioButton
            android:visibility="gone"
            android:id="@+id/rb_zhongci"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="中磁刷卡头" />
        
        <RadioButton
            android:visibility="gone"
            android:id="@+id/rb_yifeng"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="怡丰YM18" />
        <RadioButton
            android:visibility="gone"
            android:id="@+id/rb_xinnuo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="鑫诺XIN80" />
        <RadioButton
            android:visibility="gone"
            android:id="@+id/rb_m368"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BBPOS_M368" />
        <RadioButton
            android:visibility="gone"
            android:id="@+id/rb_bbpos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BBPOS刷卡头" />
        <RadioButton
            android:visibility="gone"
            android:id="@+id/rb_xinlianda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="信联达刷卡头" />


    </RadioGroup>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
      android:padding="10dp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:text="确定保存"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:background="@drawable/button_click_selector"
            android:id="@+id/confirm_save"
            />

    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
