<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.caihongcity.com.activity.BindCardListActivity">

    <include layout="@layout/title_cardlist" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@drawable/border_corners">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="提额成功" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/black_55" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="0dp"
            android:background="@color/title_bg"
            android:textColor="@color/white"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="审核中" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/black_55" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="提额拒绝" />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pager_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
