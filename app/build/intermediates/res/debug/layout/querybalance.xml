<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/title"/>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customername"
            android:id="@+id/customername"
            android:textSize="18sp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customernameval"
            android:background="@null"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/customername"
            android:layout_marginLeft="9dip"
            />
        
    </RelativeLayout>
    
      <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trade_type"
            android:id="@+id/trade_type"
            android:textSize="18sp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trade_type_val"
            android:background="@null"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/trade_type"
            android:layout_marginLeft="9dip"
            />
        
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tradecardnumber"
            android:id="@+id/tradecardnumber"
            android:textSize="18sp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tradecardnumber_val"
            android:background="@null"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/tradecardnumber"
            android:layout_marginLeft="9dip"
            />
        
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/passwordnullval"
            android:id="@+id/passwordval"
            android:textSize="18sp"
            />
        <EditText 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passwordval_val"
            android:inputType="numberPassword"
            android:background="@null"
            android:maxLength="6"
            android:textSize="18sp"
            android:hint="@string/inputpassword"
            android:layout_toRightOf="@+id/passwordval"
            android:layout_marginLeft="9dip"
            />
        
    </RelativeLayout>
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="85dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip"
        android:paddingBottom="20dip"
         >
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#7c8692"
        />
    </LinearLayout>
   
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:paddingLeft="10dip"
         android:id="@+id/autoquerybalance_layout"
        android:paddingRight="10dip"
        android:gravity="center"
        >
        <Button 
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:text="@string/autoquery"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:background="@drawable/button_click_selector"
            android:id="@+id/autoquerybalance"
            />
        
    </LinearLayout>
    

</LinearLayout>
