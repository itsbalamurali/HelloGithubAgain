<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
      <include layout="@layout/title"/>
    <LinearLayout 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:paddingBottom="10dip"
             android:paddingLeft="10dip"
             android:paddingTop="20dip"
             android:gravity="left"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customername"
                    android:textSize="16sp"
                    android:textColor="#7c8692"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/customername"
                    android:gravity="left"
                    android:textSize="16sp"
                    android:paddingLeft="10dip"
                    android:text="北京博创科技有限公司"
                    
                    />
                
            </LinearLayout>
      <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:id="@+id/ll_trade_feerate"
            android:gravity="left|center_vertical"
              >
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="交易费率"
                  android:textSize="16sp"
                  android:textColor="#7c8692"
                  />
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/trade_feerate"
                  android:gravity="left"
                  android:textSize="16sp"
                  android:paddingLeft="10dip"
                  android:paddingRight="10dip"
                  android:text="0.38"
                  />
              
          </LinearLayout>
          <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:gravity="left|center_vertical"
              >
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/trade_type"
                  android:textSize="16sp"
                  android:textColor="#7c8692"
                  />
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tradetype_pro"
                  android:gravity="left"
                  android:textSize="16sp"
                  android:paddingLeft="10dip"
                  android:paddingRight="10dip"
                  android:text="消费"
                  />
              
          </LinearLayout>
            <LinearLayout 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:paddingBottom="10dip"
             android:paddingLeft="10dip"
             android:gravity="left"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tradecardnumber"
                    android:textSize="16sp"
                    android:textColor="#7c8692"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tradecardnumber"
                    android:gravity="left"
                    android:textSize="16sp"
                    android:paddingLeft="10dip"
                    android:text="12345678901212"
                    
                    />
                
         </LinearLayout>
         <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:paddingBottom="10dip"
           android:gravity="left"
           android:paddingLeft="10dip"
           android:id="@+id/consumetradetime_layout"
           android:orientation="horizontal"
              >
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/money"
                  android:textSize="16sp"
                  android:textColor="#7c8692"
                  android:gravity="left"
                  />
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/money"
                  android:gravity="right"
                  android:textSize="16sp"
                  android:paddingLeft="10dip"
                  android:text="10.00"
                  />
                
         </LinearLayout>
         
         <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:paddingBottom="5dip"
           android:gravity="left"
           android:paddingLeft="10dip"
           android:id="@+id/consume_inputpwd_layout"
           android:orientation="horizontal"
              >
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/passwordnullval"
                  android:textSize="16sp"
                  android:textColor="#7c8692"
                  />
              <EditText 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/consumepwd"
                  android:maxLength="6"
                  android:textSize="16sp"
                  android:paddingLeft="10dip"
                  android:hint="@string/inputpassword"
                  android:inputType="numberPassword"
                  android:background="@null"
                  />
                
         </LinearLayout>
         
            <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="85dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip"
        android:paddingBottom="20dip"
         >
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#7c8692"
        />
 </LinearLayout>
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
         >
        <LinearLayout
            android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/gray_light"
        android:gravity="center"
         >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancelpay"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
        </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@drawable/button_click_selector"
        android:gravity="center"
        android:id="@+id/confirmtotrade"
         >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
        </LinearLayout>
     
     </LinearLayout>
</LinearLayout>
