<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white" >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="257dip"
            android:background="@drawable/banner"
            android:orientation="vertical"
            android:paddingTop="10dip" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/companyname"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/setting_rennishua" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/companyname"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="bold"
                    android:gravity="center"
                    android:text="999,999.00"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
        <ScrollView android:layout_width="fill_parent"
                android:layout_height="wrap_content">
<LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
    
    

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dp" >

            <LinearLayout
                android:id="@+id/ll_querybalance"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/querybalance_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_customerinfo"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/customerinfo_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tradelist"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/tradelist_selector" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dp" >

            <LinearLayout
                android:id="@+id/ll_realtime"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/realtime_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_consume"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dip"
                android:layout_weight="2"
                android:background="@drawable/border"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/consume"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/consume_selector" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dp" >

            <LinearLayout
                android:id="@+id/ll_transfer"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@drawable/border"
                android:gravity="center" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/transfer_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_creditrepay"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dip"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/creditrepay_selector" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dp" >

            <LinearLayout
                android:id="@+id/ll_cardchongzhi"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/cardchongzhi_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_dianping"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center" >

                <ImageView
                   android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/dianping_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_gupiao"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center" >

                <ImageView
                     android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/gupiao_selector" />
            </LinearLayout>
        </LinearLayout>

      <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dp" >

            <LinearLayout
                android:id="@+id/ll_jiaoche"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/jiaoche_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_jipiao"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center" >

                <ImageView
                   android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/jipiao_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lvyou"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center" >

                <ImageView
                     android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/lvyou_selector" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dp" >

            <LinearLayout
                android:id="@+id/ll_phonechongzhi"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/phonechongzhi_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shuidianmei"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center" >

                <ImageView
                   android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/shuidianmei_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tuangou"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center" >

                <ImageView
                     android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/tuangou_selector" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
</ScrollView>

</LinearLayout>