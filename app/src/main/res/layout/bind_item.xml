<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/bind_item"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@drawable/bind_item"
        android:orientation="vertical"
        android:textSize="18sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:text="建设银行银行"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_bank_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="2.5"
                android:paddingTop="3dp"
                android:text="信用卡"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tixian_money"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="提现额度："
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_tixian_money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="2.5"
                android:paddingTop="3dp"
                android:text="信用卡"
                android:textSize="14sp"
                android:textColor="@color/white" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_bank_card_number"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:text="62282536********2356554"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
